.panel.panel-default.election_item{:class=>(even_row ? 'even_row' : nil)}  
  .panel-heading.clearfix
    - if @election.open? && session[:username]
      .col-md-3
        = display_election_item(item, @user, @election)
      .col-md-8
        %h4.panel-title
          %a{:id=>[:election_item_link, item.id], :rel=>"tooltip", :title=>"Click name for description", :'data-toggle' => 'collapse', :href => "#election_item_description_#{item.id}"}= item.name
  .panel-collapse.collapse.clearfix{:id=>[:election_item_description, item.id]}
    .col-md-12
      .description
        :markdown
          #{item.description}
